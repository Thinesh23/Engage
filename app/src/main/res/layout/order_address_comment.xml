<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app ="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    android:layout_margin="8dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <fragment
                android:id="@+id/place_autocomplete_fragment"
                android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtComment"
                android:hint="Comment"
                android:textColorHint="@color/colorPrimary"
                android:text=""
                android:inputType="textMultiLine"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_baseColor="@color/colorPrimary"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/colorPrimary"
                app:met_singleLineEllipsis="true"/>

            <TextView
                android:text="Delivery method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.rey.material.widget.CheckBox
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                style="@style/Material.Drawable.CheckBox"
                android:gravity="center_vertical"
                android:text="Ship to Home Address"
                android:id="@+id/rdiHomeAddress"
                android:textColor="@android:color/black"
                app:cbd_strokeColor="@android:color/black"
                app:cbd_tickColor="@android:color/white" />

<!--            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                
&lt;!&ndash;                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ship To This Address"
                    android:id="@+id/rdiShipToAddress"/>&ndash;&gt;

&lt;!&ndash;                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ship To Home Address"
                    android:id="@+id/rdiHomeAddress"/>&ndash;&gt;
            </RadioGroup>-->

            <TextView
                android:text="Payment method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cash on Delivery"
                    android:id="@+id/rdiCOD"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reward Cash Wallet"
                    android:id="@+id/rdiRewardCash"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Paypal"
                    android:id="@+id/rdiPaypal"/>

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Cash Reward Wallet" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/cashReward_balance"
                    android:text="RM 1000" />


            </LinearLayout>



        </LinearLayout>


</android.support.v7.widget.CardView>


